<h3 id="welcome">Welcome, {{username}}!</h3>
<h4>Create a New Post</h4>
<form class="login-form">
  <div class="form-group">
    <input type="text" class="form-control" id="new-post-title" placeholder="Title">
  </div>
  <br>
 <div class="form-group">
    <textarea class="form-control" id="new-post" placeholder="Write a New Post" rows="3"></textarea>
  </div>
</form>
<button type="button" class="btn-primary" id="post-button">Post</button>
<br>
<h4>Your Posts</h4>
{{#if posts.length}}
    {{#each posts as |post|}}
    <div class="card" id={{post.id}}>
        <div class="card-header single-post-title">
            {{post.title}}
        </div>
        <br>
        <div class="card-body">
        <p class="card-text">{{post.post_content}}</p>
        <br>
        <a href="/dashboard/edit/{{post.id}}" class="btn-primary" id="edit-post">Edit Post</a>
    </div>
</div>

{{/each}}
{{/if}}

<script src="../js/dashboard.js"></script>